@model Data.Models.AuthorizationModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Servidor de Autorização</h2>

<p>O aplicativo @ViewBag.AppName deseja acessar sua conta.</p>

<p>Você permite @ViewBag.AppName acessar?</p>

@using (Html.BeginForm())
{
    @Html.HiddenFor(m=>m.response_type)
    @Html.HiddenFor(m=>m.client_id)
    @Html.HiddenFor(m=>m.redirect_uri)
    @Html.HiddenFor(m=>m.scope)
    @Html.HiddenFor(m=>m.state)
    Model.Deny = true;
    @Html.HiddenFor(m=>m.Deny)
    <input type="submit" value="Negar" />
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(m=>m.response_type)
    @Html.HiddenFor(m=>m.client_id)
    @Html.HiddenFor(m=>m.redirect_uri)
    @Html.HiddenFor(m=>m.scope)
    @Html.HiddenFor(m=>m.state)
    Model.Deny = false;
    @Html.HiddenFor(m=>m.Deny)
    <input type="submit" value="Aprovar" />
}
